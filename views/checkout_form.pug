extends layout

block content

  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='item') Item:
        select(id='item-select' type='select' placeholder='Select item' name='item' required='true')
            
            for item in items
                if checkout
                    option(value=item._id selected=(checkout.item.toString()==item._id.toString() ? 'selected' : false)) #{item.name}
                else
                    option(value=item._id) #{item.title.name} -- #{item.format}
    
    div.form-group
      label(for='patron') Patron:
        select(id='patron-select' type='select' placeholder='Select patron' name='patron' required='true')
            
            for patron in patrons
                if checkout
                    option(value=patron._id selected=(checkout.patron.toString()==patron._id.toString() ? 'selected' : false)) #{patron.name}
                else
                    option(value=patron._id) #{patron.name}
                    

    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg