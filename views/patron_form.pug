extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='first_name') First Name:
      input#first_name.form-control(type='text' placeholder='First name' name='first_name' required='true' value=(undefined===patron ? '' : patron.first_name) )
      label(for='last_name') Last Name:
      input#last_name.form-control(type='text' placeholder='Last Name' name='last_name' required='true' value=(undefined===patron ? '' : patron.last_name))
    div.form-group
      label(for='street') Street:
      input#addresses.street.form-control(type='text' placeholder='Street' name='street' value=(undefined===patron ? '' : patron.street) )
      label(for='city') City:
      input#street.form-control(type='text' placeholder='City' name='city' value=(undefined===patron ? '' : patron.city) )
      label(for='state') State:
      input#city.form-control(type='text' placeholder='State' name='state' value=(undefined===patron ? '' : patron.state) )
      label(for='zip') Zip:
      input#state.form-control(type='text' placeholder='Zip' name='zip' value=(undefined===patron ? '' : patron.zip) )
      label(for='email') Email:
      input#zip.form-control(type='text' placeholder='Email' name='email' value=(undefined===patron ? '' : patron.email) )
    div.form-group
      label Is Delinquent:
      br
      input(type="radio" id="true" name="is_delinquent" value="true") 
      label(for='true') True
      input(type="radio" id="false" name="is_delinquent" value="false")
      label(for='false') False
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg  