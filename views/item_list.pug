extends layout

block content
  h1= title
  input#myInput(type="text" onkeyup="filterList()" placeholder="Search for items..")
  ul#myUL
    each item in item_list
      li 
        a(href=item.url) #{item.title.name} : #{item.format} - 
        if item.status=='Available'
          span.text-success #{item.status}
        else
          span.text-danger #{item.status} 
        
         

    else
      li There are no items in the library today.